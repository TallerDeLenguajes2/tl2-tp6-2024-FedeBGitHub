@model List<Presupuesto>

        <form asp-controller="Presupuestos" asp-action="CrearPresupuestoFormulario">
                    <input class="btn btn-success" type="submit" value="Crear Presupuesto"></input>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre Destinatario</th>
                    <th>Fecha Creacion</th>
                    <th>Ver más</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
                </thead>
            <tbody>
            
        @foreach(Presupuesto p in Model)
        {
            <tr>
                <th> @p.IdPresupuesto</th>
                <td> @p.NombreDestinatario</td>
                <td> @p.FechaCreacion.ToString("dd/MM/yyyy")</td>
                <td>
                    <form asp-controller="Presupuestos" asp-action="ObtenerDetalle">
                    <input hidden name="id" value="@p.IdPresupuesto">
                    <input class="btn btn-primary" type="submit" value="Ver más"></input>
                    </form>
                </td>
                <td>
                    <form asp-controller="Presupuestos" asp-action="ModificarPresupuestoForm">
                    <input type="hidden" name="IdPresupuesto" value="@p.IdPresupuesto" />
                    <input type="hidden" name="NombreDestinatario" value="@p.NombreDestinatario" />
                    <input type="hidden" name="FechaCreacion" value="@p.FechaCreacion.Date" />
                    <input class="btn btn-warning" type="submit" value="Modificar"></input>
                    </form>
                </td>
                <td>
                    <form asp-controller="Presupuestos" asp-action="EliminarPresupuestoPag">
                    <input type="hidden" name="IdPresupuesto" value="@p.IdPresupuesto" />
                    <input type="hidden" name="NombreDestinatario" value="@p.NombreDestinatario" />
                    <input type="hidden" name="FechaCreacion" value="@p.FechaCreacion.Date" />
                    <input class="btn btn-danger" type="submit" value="Eliminar"></input>
                    </form>
                </td>
            </tr>
        }
            </tbody>
        </table>