@model Producto

<form asp-controller="Producto" asp-action="ModificarProductoPost" method="post">
    <div class="form-group">
        <label asp-for="@Model.IdProducto"></label>
        <input asp-for="@Model.IdProducto" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" required/>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Precio"></label>
        <input asp-for="@Model.Precio" class="form-control" required/>
    </div>
    <input class="btn btn-primary" type="submit" value="Enviar"></input>
</form>