@model ModificarProductoViewModel

<form asp-controller="Producto" asp-action="ModificarProductoPost" method="post">
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control"/>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
        
    </div>

    <div class="form-group">
        <label asp-for="@Model.Precio"></label>
        <input asp-for="@Model.Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Enviar"></input>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}