@model Cliente

<form asp-controller="Cliente" asp-action="ModificarClientePost" method="post">
    <div class="form-group">
        <label asp-for="@Model.ClienteId"></label>
        <input asp-for="@Model.ClienteId" class="form-control" readonly required/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" required/>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Telefono"></label>
        <input asp-for="@Model.Telefono" class="form-control" required/>
    </div>
    <input class="btn btn-primary m-1 " type="submit" value="Modificar"></input>
</form>